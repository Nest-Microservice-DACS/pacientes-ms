generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum PacienteStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model Paciente {
  id        Int            @id @default(autoincrement())
  nombre    String
  apellido  String
  fechaNac  DateTime
  direccion String
  telefono  String
  email     String         @unique
  status    PacienteStatus @default(ACTIVE)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}
