generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Patient {
  id        Int            @id @default(autoincrement())
  name      String
  lastName  String
  birthDate  DateTime
  address String
  phone  String
  email     String         @unique
  status    PatientStatus @default(ACTIVE)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

enum PatientStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}
